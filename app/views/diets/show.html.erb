<h1>Sua Dieta</h1>
 
 <% @diet.meals.each do |meal| %>
 	<p>Name: <%= meal.name %></p>
 	<p>Calories: <%= meal.calories %></p>
 	<p>Carb %: <%= meal.carbohydrate_percentage %></p>
 	<p>Protein %: <%= meal.protein_percentage %></p>
 	<p>Fat %: <%= meal.fat_percentage %></p>
	<table>
	  <tr>
	    <th>Food Name</th>
	    <th>Portion Size</th>
	    <th>Calories</th>
	  </tr>
	 
	  <% meal.portions.each do |portion| %>
	    <tr>
	      <td><%= portion.food.name %></td>
	      <td><%= number_with_precision(portion.size, precision: 2) %> <%= portion.food.unit %></td>
	      <td><%= number_with_precision((portion.size * (portion.food.calories / portion.food.size)), precision: 2) %> cal</td>
	    </tr>
	  <% end %>
	</table>
<% end %>
 <div class="row">
	<div class="large-12 columns">
	 	<p>Totais da Dieta  - 
	 	Calorias: <%= number_with_precision(@diet.calories, precision: 0) %>
	 	/ Carboidratos(%): <%= number_with_precision(@diet.carbohydrate_percentage, precision: 1) %>
	 	/ Proteínas(%): <%= number_with_precision(@diet.protein_percentage, precision: 1) %>
	 	/ Gorduras(%): <%= number_with_precision(@diet.fat_percentage, precision: 1) %>
	 	</p>
	</div>
</div>

<div class="row">
	<div class="large-12 columns">
		 <% meals = @diet.meals.sort_by {|meal| meal.name}
		 	meals.each do |meal| %>

		 	<p><%= meal.name %>  - 
		 	Calorias: <%= number_with_precision(meal.calories, precision: 0) %>
		 	/ Carboidratos(%): <%= number_with_precision(meal.carbohydrate_percentage, precision: 1) %>
		 	/ Proteínas(%): <%= number_with_precision(meal.protein_percentage, precision: 1) %>
		 	/ Gorduras(%): <%= number_with_precision(meal.fat_percentage, precision: 1) %>
		 	</p>

		 	
			<div class="large-12 columns">
				<div class="row">
					<% meal.portions.each do |portion| %>
						<div class="large-4 small-6 columns">
							<%= image_tag(portion.food.image.url,  border: 2) %>
							<div class="panel">
								<h5><strong><%= portion.food.name %></strong></h5>
								<h6 class="subheader database-value"><%= number_with_precision(portion.size, precision: 0) %> <%= portion.food.unit %> - <%= number_with_precision((portion.size * (portion.food.calories / portion.food.size)), precision: 0) %> cal</h6>
								<h6><%= link_to 'Remover', remove_portion_meal_diet_path(@diet, meal, portion), {class:"small button", style: "color:#FFFFFF;"} %></h6>

								<a href="#" data-reveal-id=<%= meal.name.gsub(/\s+/, "") %>>Alterar Porcao</a>

							</div>
						</div>
					<% end %>
					<div class="large-4 small-6 columns">
						<a href="#" data-reveal-id=<%= meal.name.gsub(/\s+/, "") %>><img src="http://placehold.it/1000x1000&amp;text=Adicionar"></a>
					</div>
				</div>
			</div> 
			

			<!--table>
			  <tr>
			    <th>Food Name</th>
